<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gplibs.magic_surface_view_sample.VortexAnimActivity">

    <com.gplibs.magicsurfaceview.MagicSurfaceView
        android:id="@+id/surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="S"
        android:textSize="290sp"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_margin="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/surface_bg"
        android:text="MagicSurfaceView\nMagicSurfaceView\nMagicSurfaceView\nMagicSurfaceView\nMagicSurfaceView\nMagicSurfaceView\nMagicSurfaceView"
        android:textSize="30sp"
        android:textColor="@color/c3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:padding="20dp"
        android:text="Click anywhere"
        android:textSize="20sp"/>

</FrameLayout>
